<section class="experiencia fon-blanco-100">
    <h2 class="cabecera-1  cabecera-1-experiencia col-gris-200">Experiencias</h2>
    <% experiencias.informacion.forEach((experiencia)=>{ %>
      <% const {fuente, alt,fecha,titulo,descripcion} = experiencia; %> 
      <div class="area area-experencia">
        <figure class="figura figura-area">
          <img
            class="imagen imagen-figura"
            src= <%= fuente %> 
            alt= <%= alt %>
          />
        </figure>
        <figcaption class="descripcion descripcion-area">      
          <span class="cuerpo-2 cuerpo-2-descripcion col-gris-300">
            <%= fecha %>
          </span>
          <h4 class="cabecera-3 cabecera-3-descripcion col-oscuro-100">
            <%= titulo %>
          </h4>
          <p class="cuerpo-1 cuerpo-1-descripcion col-gris-300">
            <%= descripcion %>
          </p>
        </figcaption>
      </div>
    <% }); %> 
</section>